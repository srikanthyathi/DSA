// Your current selection is GCC
#include<stdio.h>
int main(){
    int number;
    
    printf("Enter a number: ");
    scanf("%d", &number);
    
    if (number > 0) {
        printf("%d is a number is positive number\n",number);
    }else if (number < 0) {
        printf("%d is a number is negative number\n",number);
    }else {
        printf("The number zero\n");
    }
    
    return 0;
    
}
